@model webapp.Models.Alumno

<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Page Title</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='main.css'>
    <script src='main.js'></script>
</head>
<body>
    REGISTRO DE ALUMNO AL CURSO

    <form asp-controller="Alumno" asp-action="Registrar">

            <strong><label asp-for="Nombres" class="control-label"></label></strong>
            <input asp-for="Nombres" class="form-control" />

            <strong><label asp-for="Apellidos" class="control-label"></label></strong>
            <input asp-for="Apellidos" class="form-control" />


            
@for (int i = 0; i < Model.CursoList.Count; i++)
{
  <div> 
        @Html.HiddenFor(model => Model.CursoList[i].Tipo) 

        @Html.CheckBoxFor(model => Model.CursoList[i].active, new { id = "curso" + Model.CursoList[i].id })
        
        @Html.LabelFor(model => Model.CursoList[i].active, Model.CursoList[i].Tipo)
    </div> 
}

            

     <button type="submit" class="btn btn-primary">Calcular</button> 

    </form>
</body>
</html>